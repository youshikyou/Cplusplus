long double probability(unsigned numbers, unsigned special_numbers, unsigned picks) {
	long double result = 1.0;
	long double n;
	unsigned p;
	for (n = numbers, p = picks; p > 0; n--, p--)
	{
		result = result * (n / p);
	}
		
	result = result * (long double(special_numbers) / long double(1));
	return result;

}
