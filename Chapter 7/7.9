int getinfo(student * arr, int n) 
{
	int i;
	for (i = 0; i < n ; i++)
	{
		cout << "Enter info student #" << (i+1) << ":" << endl;
		cout << "Enter Fullname: ";
		cin.getline(arr[i].fullname, SLEN);
		if ( arr[i].fullname[0] !=' ')   ///!!!!注意字符判断，要用单引号！！！！
		{
			cout << "Enter hobby ; ";
			cin.getline(arr[i].hobby, SLEN);
			cout << "ooplevel : ";
			cin >> arr[i].ooplevel;
			cin.get();
		}

		else 
			break;
	}
	return i;
}
void display1(student st)
{
