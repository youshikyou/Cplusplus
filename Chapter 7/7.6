int fill_array(double *arr, int n)
{
	cout << "please input values(non_digit stop): " << endl;
	double value;
	int i;
	for (i = 0; i<n&&cin >> value; i++)
		arr[i] = value;
	return i;	
}

void show_array(const double *arr,int n)
{

	for (int i =0; i<n; i++)
	{
		cout << arr[i] << "\t";
	}
	cout << endl;
}

void reverse_array(double * arr, int n)
{
	int i,j;
	double temp;
	for (i = 1,j=n-2;i<j;i++,j--)
	{
		temp = arr[i];
		arr[i] = arr[j];
		arr[j] = temp;
	}
}
