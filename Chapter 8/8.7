template <typename T>
T sumarray(T arr[], int n)
{
	T sum = 0;
	for (int i = 0; i < n; i++)
		sum += arr[i];

	return sum;
}

template <typename T>
T sumarray(T *arr[], int n)
{
	T sum = T(0);
	for (int i = 0; i < n; i++)
		sum += *arr[i];

	return sum;
}
