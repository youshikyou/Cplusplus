template <typename T>
T Maxn(T *p, int n)
{
	T max = p[0];
	for (int i = 0; i < n; i++)
	{
		if (p[i] > max)
			max = p[i];
	}

	return max;
}

template <> const char * Maxn<>(const char **p, int n)
{
	const char * max = p[0];
	for (int i = 1; i < n; i++)
	{
		if (strlen(p[i]) > strlen(max))
		{
			max = p[i];
		}
	}
	return max;
}

